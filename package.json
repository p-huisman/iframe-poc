{
  "name": "@pggm/p-iframe-fetch",
  "version": "0.0.1",
  "description": "Fetch remote api data via an iframe",
  "repository": {
    "type": "git",
    "url": "https://github.com/p-huisman/iframe-poc.git"
  },
  "types": "./types/iframe-fetch.d.ts",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./types",
    "build:component": "cross-env NODE_ENV=production node scripts/build.js",
    "build:serviceWorker": "esbuild src/iframe-fetch-service-worker.ts --bundle --minify --target=es6 --outfile=dist/iframe-fetch-service-worker.js",
    "build": "npm run clean && npm run build:serviceWorker && npm run build:component && npm run build:types",
    "build:types": "tsc -d -t es2020 --moduleResolution node --declarationDir types --emitDeclarationOnly",
    "develop:component": "cross-env NODE_ENV=development node scripts/build.js",
    "develop:serviceWorker": "esbuild src/iframe-fetch-service-worker.ts --bundle --watch --sourcemap --target=es6 --outfile=dist/iframe-fetch-service-worker.js",
    "develop": "concurrently \"node scripts/data-server.js\" \"npm run develop:serviceWorker\" \"npm run develop:component\"",
    "lint": "eslint --fix --ext ts --ext tsx ./src",
    "prepare": "husky",
    "test": "cross-env NODE_ENV=test karma start karma.conf.js --single-run",
    "testdevelop": "cross-env NODE_ENV=test karma start karma.conf.js"
  },
  "keywords": ["fetch", "iframe", "post-message",  "message channel"],
  "author": "Peter Huisman",
  "license": "UNLICENSED",
  "devDependencies": {
    "@chiragrupani/karma-chromium-edge-launcher": "^2.3.1",
    "@types/jasmine": "^5.1.4",
    "@types/karma": "^6.3.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.0",
    "esbuild-plugin-dev-server": "^4.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sonarjs": "^0.23.0",
    "express": "^4.18.2",
    "fetch-mock": "^9.11.0",
    "husky": "^9.0.7",
    "istanbul-lib-instrument": "^6.0.1",
    "jasmine": "^5.1.0",
    "karma": "^6.4.2",
    "karma-coverage": "^2.2.1",
    "karma-esbuild-up": "^3.0.0",
    "karma-jasmine": "^5.1.0",
    "karma-junit-reporter": "^2.0.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "serve-index": "^1.9.1",
    "typescript": "^5.3.3"
  },
  "browserslist": [
    "> 2% in NL",
    "last 2 versions"
  ]
}
